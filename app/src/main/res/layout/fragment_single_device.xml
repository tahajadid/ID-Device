<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inside_layers"
    tools:context=".ui.singleDevice.SingleDeviceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:background="@drawable/myview"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/myview"
                android:padding="10dp"
                android:src="?attr/actionModeSelectAllDrawable" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="14dp">

                <TextView
                    android:id="@+id/nameSingleDevice_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="Name of the Device"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/versionSingleDevice_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="Version "
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/versionSingleDevice_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="2dp"
                        android:text="2.2.1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/available_label"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="Available "
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/dateAvailable_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Now"
                        android:textColor="#4CAF50"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/serviceName_label"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Service name"
                android:textColor="#7030A0"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/supportedOsSingleDevice_label"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Supported OS"
                android:textColor="#7030A0"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/featuresSingleDevice_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Features"
                android:textColor="#7030A0"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/serviceName_tv"
                android:layout_width="122dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="Fingerprint" />

            <TextView
                android:id="@+id/supportedOsSingleDevice_tv"
                android:layout_width="123dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/featuresSingleDevice_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <Button
            android:id="@+id/orderDevice_button"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Order Device"
            app:backgroundTint="#7030A0" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>