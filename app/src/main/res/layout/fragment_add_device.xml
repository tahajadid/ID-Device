<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddDevice.AddDeviceFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/deviceName_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="#7030A0"
            android:ems="10"
            android:hint="Device name"
            android:inputType="textPersonName"
            android:textColorHint="#7030A0" />

        <EditText
            android:id="@+id/deviceVersion_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#7030A0"
            android:ems="10"
            android:hint="Version"
            android:inputType="textPersonName"
            android:textColorHint="#7030A0" />

        <EditText
            android:id="@+id/deviceSupportedOS_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#7030A0"
            android:ems="10"
            android:hint="Supported OS"
            android:inputType="textPersonName"
            android:textColorHint="#7030A0" />

        <EditText
            android:id="@+id/deviceServiceName_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#7030A0"
            android:ems="10"
            android:hint="Service name"
            android:inputType="textPersonName"
            android:textColorHint="#7030A0" />


        <EditText
            android:id="@+id/deviceFeature_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Features"
            android:layout_marginTop="10dp"
            android:backgroundTint="#7030A0"
            android:inputType="textPersonName"
            android:textColorHint="#7030A0"  />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cupboard_label"
                android:layout_width="142dp"
                android:layout_height="match_parent"
                android:text="Cupboard :"
                android:textColor="#7030A0"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/projectDev_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Owner :"
                android:textColor="#7030A0"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/cupboard_spinner"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:background="#617030A0" />

            <Spinner
                android:id="@+id/owner_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="#617030A0"
                android:entries="@array/ownerList" />
        </LinearLayout>

        <Button
            android:id="@+id/addDevice_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Add Device" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="93dp"
                android:layout_height="59dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="fill_vertical"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                app:srcCompat="@drawable/logo_only" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>