<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar_normal"
    android:paddingTop="20dp"
    android:paddingRight="30dp"
    android:paddingLeft="30dp"
    tools:context=".ui.userInformation.EmployerInformationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="115dp"
                android:layout_height="131dp"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="false"
                android:paddingLeft="0dp"
                android:paddingTop="15dp"
                android:paddingRight="0dp"
                android:paddingBottom="15dp"
                app:srcCompat="@drawable/person_for_login"
                tools:ignore="VectorDrawableCompat"
                tools:layout_editor_absoluteX="158dp"
                tools:layout_editor_absoluteY="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameUser_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=".."
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/roleUser_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:textColor="#DEB9FA"
                    android:textSize="18sp"
                    android:textStyle="italic" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#fff" />

        <TextView
            android:id="@+id/emailUser_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="start"
            android:text="Email :"
            android:textAlignment="viewStart"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/emailUser_tv"
                android:layout_width="261dp"
                android:layout_height="match_parent"
                android:backgroundTint="#FFF"
                android:ems="10"
                android:gravity="bottom"
                android:paddingBottom="4dp"
                android:text=""
                android:textColor="#FFF"
                android:textColorHint="#FFF"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:orientation="horizontal"
                android:textAlignment="textEnd">


                <ImageView
                    android:id="@+id/sendEmail_iv"
                    android:layout_width="30dp"
                    android:layout_height="26dp"
                    android:layout_gravity="bottom"
                    android:adjustViewBounds="false"
                    app:srcCompat="@android:drawable/ic_dialog_email"
                    tools:ignore="VectorDrawableCompat"
                    tools:layout_editor_absoluteX="158dp"
                    tools:layout_editor_absoluteY="30dp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/phoneUser_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="start"
            android:text="Number Phone :"
            android:textAlignment="viewStart"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phoneUser_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#FFF"
                android:ems="10"
                android:gravity="bottom"
                android:text=""
                android:textAlignment="gravity"
                android:textColor="#FFF"
                android:textColorHint="#FFF"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:orientation="horizontal"
                android:textAlignment="textEnd">


                <ImageView
                    android:id="@+id/callUser_iv"
                    android:layout_width="30dp"
                    android:layout_height="28dp"
                    android:adjustViewBounds="false"
                    android:layout_gravity="bottom"
                    app:srcCompat="@android:drawable/stat_sys_phone_call"
                    tools:ignore="VectorDrawableCompat"
                    tools:layout_editor_absoluteX="158dp"
                    tools:layout_editor_absoluteY="30dp" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/projectUser_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="start"
            android:text="Project :"
            android:textAlignment="viewStart"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/projectUser_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:backgroundTint="#FFF"
            android:ems="10"
            android:text=" "
            android:textColor="#FFF"
            android:textColorHint="#FFF"
            android:textSize="18sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="14dp"
            android:background="#fff" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="2dp"
            android:background="#3EFFFFFF" />


    </LinearLayout>

</RelativeLayout>